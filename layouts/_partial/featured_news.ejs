<% if (typeof(posts) != "undefined" && posts.length){

	if(typeof(start) == 'undefined') {
		start = 0;
	}

	if(typeof(count) == 'undefined' || count == null) {
		count = posts.length;
	}
	
	var end = start + count;
	posts = posts.sort('date', -1).slice(start,end);
	%>
  <div class="recent-posts">
      <ul class="post-list">
        <% posts.sort('date', -1).slice(start,end).forEach(function(post,idx) {
			%>
          <li class='post'>
					  <div class='post-image'>
						  <img src="<%- post.image -%>"/>
					  </div>

				  <div class='post-info'>
						  <h2><a class='title' href="/<%- post.path %>"><%= post.title || '(no title)' %></a></h2>
						  <% if(post.excerpt && post.excerpt != "") {%><div class="description"><%- post.excerpt %> <br/> <a class='title' href="/<%- post.path %>">Read More</a></div>
		
						  <%}%>
				  </div>
          </li>
        <% }) %>
      </ul>

  </div>
<% } %>