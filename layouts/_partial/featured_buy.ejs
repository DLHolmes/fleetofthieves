<% if (typeof(posts) != "undefined" && posts.length){

	if(typeof(start) == 'undefined') {
		start = 0;
	}

	if(typeof(count) == 'undefined') {
		count = posts.length;
	}
	var end = start + count;

	%>
  <div class="recent-posts">
      <ul class="post-list">
        <% posts.sort('date', -1).slice(start,end).forEach(function(post,idx) {
			%>
          <li class='post'>
					  <div class='post-image'>
						  <img src="<%- post.image -%>"/>
					  </div>

				  <div class='post-info'>
						  <h2><%= post.title || '(no title)' %></h2>
						  <div class="desc">
						  	<%- post.body %>
						  </div>
				  </div>
          </li>
        <% }) %>
      </ul>

  </div>
<% } %>