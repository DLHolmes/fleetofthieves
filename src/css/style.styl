body {
    background-image: url('/images/background.png')
    font-family: 'Montserrat', sans-serif;
}

.container {
    max-width: 1017px;
}

.site-body {
    background-color: #ffffff;
    border: 3px solid #000000;
    margin-top: 30px;
    margin-bottom: 30px;
    box-shadow: 5px 5px 5px rgba(black, 0.5);
    padding: 0;
    display: flex;
    flex-direction: row;
    
    .menu {
        background-image: url('/images/ovalslice.png')
        background-repeat: no-repeat;
        margin: 0;
        padding-top: 180px;
        text-align: right;
        max-width: 195px;
        flex-grow: 1;
        
        .list {
            max-width: 85%;
            margin: 0;
            padding: 0;
            
            a {
                text-decoration: none;
                color: #ffffff
                font-size: 21px;
                
            }
            
            li {
                list-style: none;
                padding-right: 20px;
                display: block;
                
            }
        }
        
    }
    
    .content {
        background-image: url('/images/mightymaca.jpg')
        background-repeat: no-repeat;
        flex-grow: 1;
    }
    
}
