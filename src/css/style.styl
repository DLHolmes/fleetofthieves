body {
    background-image: url('/images/background.png')
    font-family: 'Montserrat', sans-serif;
}

.container {
    max-width: 1017px;
}

.site-body {
    background-color: #ffffff;
    border: 3px solid #000000;
    margin-top: 30px;
    margin-bottom: 30px;
    box-shadow: 5px 5px 5px rgba(black, 0.5);
    padding: 0;
    display: flex;
    flex-direction: row;
    overflow-x: hidden;
    
    a:hover {
        color: #ff00000;
    }
    
    .menu {
        background-image: url('/images/ovalslice.png')
        background-repeat: no-repeat;
        margin: 0;
        padding-top: 180px;
        text-align: right;
        max-width: 195px;
        flex-grow: 1;
        z-index: 10;
        
        .list {
            max-width: 85%;
            margin: 0;
            padding: 0;
            
            a {
                text-decoration: none;
                color: #ffffff
                font-size: 21px;
                
            }
            
            li {
                list-style: none;
                padding-right: 20px;
                display: block;
                
            }
        }
        
    }
    
    .content {
        background-image: url('/images/mightymaca.jpg')
        background-repeat: no-repeat;
        flex-grow: 1;
        z-index: 0;
        max-width: 831px;
        
        .footer {
            text-align: center;
            margin-top: 60px;
        }
    }
    
}
.home {
    //display: none;
    padding-top: 191px;
    
    li:nth-child(even) {color: #808080}
    li:nth-child(odd) {color: #008000}
    
    li {
        font-weight: bold;
    }
    
    .home-banner {
        position: relative;
        height: 231px;
        
        
        img {
            position: absolute;   
            left: -42px;
            min-width: 105%;
        }
    }
    .features {
        text-align: center;
        margin-top: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #383838;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        
        
        a {
            text-decoration: none;
            background-color: #283f74;
            color: #ffffff;
            border-radius: 20px;
            padding-left: 5px;
            padding-right: 5px;
            padding-bottom: 2px;
        }
        
        .featured {
            flex: 1;
            border-right: 2px solid #000000;
            max-width: 205px;
            h2 {
                font-size: 25px;
                font-weight: normal;
                height: 50px;
                padding-bottom: 40px;
                
            }
            
            img.center {
                display: block;
                margin-left: auto;
                margin-right: auto;
                padding-bottom: 80px;
                height: 200px;
                
            }
            
            &:last-of-type {
                border: none;
            }
            
            
        }
        
        
    }
    
    .amazon {
        background-color: #eef0d4;
        text-align: center;
        margin: 15px;
        border-radius: 20px;
        border: 1px solid #383838;
        padding-bottom: 30px;
        
        h2 {
            color: #003300;
            font-size: 20px;
            font-weight: bold;
        }
        
        a {
            
        }
    }
    
    .five-point {
        margin-left: 80px;
        margin-right: 30px;
        font-weight: bold;
        font-size: 23px;
        letter-spacing: 0;
        
        .point-1 {
            color: #008000;
            margin-bottom: 15px;
        }
        
        .point-2 {
            color: #008000;
            margin-bottom: 15px;
        }
        
        .point-3 {
            color: #008000;
            margin-bottom: 15px;
        }
        
        .point-4 {
            color: #808080;
            margin-bottom: 15px;
        }
        
        .point-5 {
            color: #008000;
        }
    }
    
    .discription {
        margin-top: 30px;
        
        a {
            text-decoration: none;
            color: #008000;
        }
        
        .small-p {
            font-size: 2px;
        }
    }
}

.page {
    padding-top: 191px;
    
    .page-banner {
        position: relative;
        height: 231px;
        
        
        img {
            position: absolute;   
            left: -42px;
            min-width: 105%;
        }
    }
    
    li:nth-child(odd) {color: #000000}
    li:nth-child(even) {color: #008000}
    
    li {
        font-weight: bold;
        margin-left: 30px;
    }
    
    
    
    h1 {
        color: #004700;
        font-size: 27px;
        font-weight: bold;
        letter-spacing: -2px;
        text-transform: uppercase;
        margin-bottom: 60px;
        margin-top: 10px;
    }
    
    p {
        padding-left: 15px;
        padding-right: 15px;
    }
    
    a {
        color: #004700;
    }
    
    
    
    h2 {
        font-size: 20px;
        font-weight: bold;
        letter-spacing: -1px;
    }
    
    .left-img {
        float: left;
        margin-right: 15px;
    }
    
    .right-img {
        float: right;
    }
    
    .callout {
        background-color: #f0efd5;
        border: 1px solid #080808;
        margin-right: 30px;
        border-radius: 20px;
        padding: 15px;
        letter-spacing: -1px;
        line-height: -1px;
        
        
        h2 {
            font-weight: bold;
            font-size: 13px;
            color: #004700;
            letter-spacing: 1px;
            
        }
        
        h3 {
            font-size: 20px;
            font-weight: bold;
            letter-spacing: -1px;
        }
        
        h4 {
            font-size: 25px;
            font-weight: bold;
            letter-spacing: -1px;
        }
        
        a {
        color: #004700;
        text-decoration: none;
    }
        
        img {
            float: right;
            border: 1px solid #000000;
        }
        
        pre {
            border: none;
            background-color: #f0efd5;
        }
    }
}

