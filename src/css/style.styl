body {
    background-image: url('/images/background.png')
    font-family: 'Montserrat', sans-serif;
}

.container {
    max-width: 1017px;
}

.site-body {
    background-color: #ffffff;
    border: 1px solid #000000;
    margin-top:0;
    margin-bottom:0;
    box-shadow: 5px 5px 5px rgba(black, 0.5);
    padding: 0;
    overflow-x: hidden;
    
    @media (min-width: 601px) {
        display: flex;
        flex-direction: row;
    }
    
    @media (min-width: 1026px) {
        margin-top: 30px;
        margin-bottom: 30px;
        border: 3px solid #000000;
    }
    
    a:hover {
        color: #ff00000;
    }
    
    .menu {
        margin: 0;
        z-index: 10;
        min-width: 186px;
        overflow: hidden;
        height: 35px;
        background-color: #6bb20a;
        color: #ffffff;
        
        @media (min-width: 601px) {
            background-image: url('/images/ovalslice.png')
            background-repeat: no-repeat;
            padding-top: 180px;
            text-align: right;
            max-width: 195px;
            flex-grow: 1;
            overflow: show;
            height: auto;
            background-color: transparent;
        }
        
        .menu-hover {
            text-align:center;
            padding: 1px;
            background-color: #bdfd9c;
            border-bottom: solid 1px #000000;
            
            @media (min-width: 601px) {
                display:none;
            }
        }
        
        .list {
            background-image: url('/images/maca_circle.png');
            background-repeat: no-repeat;
            background-position: 80% 50%;
        
            a {
                    text-decoration: none;
                color: #ffffff
                font-size: 21px;
                
            }
            
            li {
                list-style: none;
                padding-right: 20px;
                display: block;
                
            }
            
            @media (min-width: 601px) {
                background-image: none;
                max-width: 85%;
                margin: 0;
                padding: 0;
                
                a {
                    text-decoration: none;
                    color: #ffffff
                    font-size: 21px;
                    
                }
                
                li {
                    list-style: none;
                    padding-right: 20px;
                    display: block;
                    
                }
            }
        }
        
        &:hover {
            height: auto;
        }
    }
    
    .content {
        background-image: url('/images/mightymaca.jpg')
        background-repeat: no-repeat;
        background-size: 100%;
        flex-grow: 1;
        z-index: 0;
        max-width: 831px;
        
        @media (min-width: 1026px) {
            background-size: auto;
        }
        
        .footer {
            text-align: center;
            margin-top: 60px;
        }
    }
    
}

.home {
    padding-top: 80px;
    
    @media (min-width: 601px) {
        height: 140px;
    }
    
    @media (min-width: 800px) {
        padding-top: 180px;
    }
    
    @media (min-width: 990px) {
        padding-top: 191px;
    }
    
    li:nth-child(even) {color: #808080}
    li:nth-child(odd) {color: #008000}
    
    li {
        font-weight: bold;
    }
    
    .home-banner {
        position: relative;
        height: 105px;
        
        @media (min-width: 601px) {
            height: 185px;
        }
        
        @media (min-width: 890px) {
            height: 220px;
        }
        
        @media (min-width: 1026px) {
            height: 231px;
        }
        
        img {
            position: relative;   
            
            @media (min-width: 601px) {
                position: absolute;   
                left: -42px;
                min-width: 115%;
            }
            
            @media (min-width: 760px) {
                min-width: 112%;
            }
            
            @media (min-width: 890px) {
                min-width: 108%;
            }
            
            @media (min-width: 1026px) {
                min-width: 105%;
            }
            
        }
    }
    
    .features {
        text-align: center;
        margin-top: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #383838;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        
        
        a {
            text-decoration: none;
            background-color: #283f74;
            color: #ffffff;
            border-radius: 20px;
            padding-left: 5px;
            padding-right: 5px;
            padding-bottom: 2px;
        }
        
        .featured {
            flex-grow: 1;
            flex-basis: 50%;
            
            @media (min-width: 1026px) {
                flex-basis: 200px;
                border-right: 2px solid #000000;
            }
            
            h2 {
                font-size: 25px;
                font-weight: normal;
                height: 50px;
                padding-bottom: 40px;
                
            }
            
            img.center {
                display: block;
                margin-left: auto;
                margin-right: auto;
                padding-bottom: 40px;
                height: 120px;
                
                
                @media (min-width: 1026px) {
                    height: 200px;
                    padding-bottom: 80px;
                }
                
            }
            
            &:last-of-type {
                border: none;
            }
            
            
        }
        
        
    }
    
    .amazon {
        background-color: #eef0d4;
        text-align: center;
        margin: 15px;
        border-radius: 20px;
        border: 1px solid #383838;
        padding-bottom: 30px;
        
        h2 {
            color: #003300;
            font-size: 20px;
            font-weight: bold;
        }
        
        a {
            
        }
    }
    
    .five-point {
        margin-left: 80px;
        margin-right: 30px;
        font-weight: bold;
        font-size: 23px;
        letter-spacing: 0;
        
        .point-1 {
            color: #008000;
            margin-bottom: 15px;
        }
        
        .point-2 {
            color: #008000;
            margin-bottom: 15px;
        }
        
        .point-3 {
            color: #008000;
            margin-bottom: 15px;
        }
        
        .point-4 {
            color: #808080;
            margin-bottom: 15px;
        }
        
        .point-5 {
            color: #008000;
        }
    }
    
    .discription {
        margin-top: 30px;
        
        a {
            text-decoration: none;
            color: #008000;
        }
        
        .small-p {
            font-size: 2px;
        }
    }
}

